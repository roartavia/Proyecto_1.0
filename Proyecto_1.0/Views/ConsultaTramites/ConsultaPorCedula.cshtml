@model Proyecto_1._0.Models.Ciudadano

@{
    ViewBag.Title = "Consulta trámites";
}

<h2>Consulta por cédula</h2>

@using (Html.BeginForm("ConsultaPorCedula", "ConsultaTramites", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Digite la cédula del ciudadano a consultar.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Cedula, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Aceptar" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
