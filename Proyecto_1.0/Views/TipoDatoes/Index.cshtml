@model IEnumerable<Proyecto_1._0.Models.TipoDato>

@{
    ViewBag.Title = "Index";
}

<h2>Catálogo de datos</h2>

<p>
    @Html.ActionLink("Registrar Nuevo", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Buscar por nombre: @Html.TextBox("SearchString")
        <input type="submit" value="Buscar" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nombre del tipo de dato")
        </th>
        <th>
            @Html.DisplayName("Nombre de la institución")
        </th>
        <th>
            @Html.DisplayName("Nombre del dato")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CatalogoTipoDato.nombre_tipo_dato)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Instituciones.nombre_institucion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_dato)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_dato }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_dato }) |
            
        </td>
    </tr>
}

</table>
