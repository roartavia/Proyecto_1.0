@model Proyecto_1._0.Models.RequisitoTramiteDato

@{
    ViewBag.Title = "Create";
}

<h2>Crear Nuevo Requisito Trámite-Dato</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Obligatorio", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Sí: @Html.RadioButton("es_obligatorio", "Si")
                No: @Html.RadioButton("es_obligatorio", "No")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_tramite, "Nombre del trámite", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_tramite", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_tramite, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_dato, "Nombre del dato", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_dato", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_dato, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
