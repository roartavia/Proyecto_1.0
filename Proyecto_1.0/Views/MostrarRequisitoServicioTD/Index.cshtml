@model Proyecto_1._0.Models.MostrarRequisitoServicioTD
@using System.Data

@{
    ViewBag.Title = "Index";
}

<h3>Mostrar Requisitos de Servicios</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Nombre del servicio", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_servicio", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDServicio, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Mostrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}


