@model Proyecto_1._0.Models.RequisitoDato

@{
    ViewBag.Title = "Edit";
}

<h2>Edición de requisitos</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Requisito Servicio-Dato</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_req_dato)

        <div class="form-group">
            @Html.Label("Obligatorio", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Sí: @Html.RadioButton("es_obligatorio", "Si")
                No: @Html.RadioButton("es_obligatorio", "No")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_dato, "Nombre del tipo de dato", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_dato", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_dato, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_servicio, "Nombre del servicio", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_servicio", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_servicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
